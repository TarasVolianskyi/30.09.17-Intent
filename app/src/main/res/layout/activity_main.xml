<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.volianskyi.taras.a300917_intent.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/github" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click" />

    <Button
        android:id="@+id/btnGoToMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickGoToMaps"
        android:text="Go to maps" />

    <Button
        android:id="@+id/btnOpenPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openPage"
        android:text="Open page" />

    <Button
        android:id="@+id/btnOpenTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openTelephone"
        android:text="Open telephone" />

</LinearLayout>